{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["vite/client", "bun-types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@lunacycle/types": ["../../libs/shared/types/src/index.ts"],
      "@lunacycle/lunar-phase": ["../../libs/shared/lunar-phase/src/index.ts"],
      "@lunacycle/auth-client": ["../../libs/shared/auth-client/src/index.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["../nigredo-server"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
